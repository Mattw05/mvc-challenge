<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  <h3>Comments for the blog</h3>
  {{#each comments as |comment|}}
  <h6>{{commentText}}</h6>
  {{/each}}
  {{!-- <p>
    <button class="btn btn-primary">Fund this Project!</button>
  </p> --}}
  <form id="commentForm" class="new-comment" data-post-id="{{id}}">
    <label for="comment">create a comment</label>
    <textarea name="comment" id="commentText"></textarea>
    <button type="submit">create</button>
  </form>
</div>
<script src="/js/comment.js"></script>